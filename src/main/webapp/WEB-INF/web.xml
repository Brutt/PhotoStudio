<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
    <listener>
        <listener-class>com.photostudio.web.listener.ThymeleafInitializerListener</listener-class>
    </listener>

    <!--  Servlets  -->
    <servlet>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.GetAllUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.DeleteUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllOrdersServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.order.AllOrdersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.security.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.security.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminPageServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.AdminPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AllOrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet>

    <servlet-mapping>

        <servlet-name>AdminPageServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern></url-pattern>
    </servlet-mapping>

</web-app>