<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
    <listener>
        <listener-class>com.photostudio.web.listener.ThymeleafInitializerListener</listener-class>
    </listener>

    <!--  Servlets  -->
    <servlet>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.GetAllUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.user.DeleteUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllOrdersServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.order.AllOrdersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.order.DeleteOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.security.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.security.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminPageServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.AdminPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.order.OrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AccessDeniedServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.AccessDeniedServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetPhotoServlet</servlet-name>
        <servlet-class>com.photostudio.web.servlet.GetPhotoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetAllUsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AllOrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/order/delete/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminPageServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <!--  binding for root path / -->
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AccessDeniedServlet</servlet-name>
        <url-pattern>/access-denied</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetPhotoServlet</servlet-name>
        <url-pattern>/photo/*</url-pattern>
    </servlet-mapping>

    <!--  Filters  -->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.photostudio.web.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>excludedUrls</param-name>
            <param-value>/login,/,/home,/access-denied,/assets/*</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>